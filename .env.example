# AI Vehicle Monitoring & Crime Detection System - Environment Configuration
# CLASSIFICATION: RESTRICTED - FOR OFFICIAL USE ONLY
# Government of Ghana - Ministry of Local Government and Rural Development
#
# SECURITY NOTICE:
# This configuration file contains sensitive system parameters.
# - Use only in secured government environments
# - Never commit actual credentials to version control
# - Contact IT Security Division for production values
# - All changes must be approved by security personnel

# Application Settings
APP_NAME="AI Vehicle Monitoring & Crime Detection System"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL="INFO"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"

# OpenAI Configuration (CLASSIFIED)
# Contact IT Security Division for production API keys
OPENAI_API_KEY="[CLASSIFIED-CONTACT-IT-SECURITY]"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.1

# Database Configuration (CLASSIFIED)
# Use government-approved database servers only
DATABASE_URL="postgresql://[CLASSIFIED]:[CLASSIFIED]@[CLASSIFIED]:5432/ghana_vehicle_monitoring"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Vector Database Configuration
FAISS_INDEX_PATH="./data/faiss_index"
CHROMADB_PATH="./data/chromadb"
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
VECTOR_DIMENSION=384

# Security Configuration (CLASSIFIED)
# CRITICAL: Use government-issued cryptographic keys only
SECRET_KEY="[CLASSIFIED-GOVERNMENT-ISSUED-KEY]"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"
ENCRYPTION_KEY="[CLASSIFIED-GOVERNMENT-ISSUED-ENCRYPTION-KEY]"

# MCP Configuration
MCP_CONTEXT_WINDOW=4096
MCP_MAX_CONTEXT_UPDATES=100
MCP_CACHE_TTL=300

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
VECTOR_SEARCH_TIMEOUT=5

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=""

# AWS Configuration (for deployment)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
S3_BUCKET_NAME=""

# Redis Configuration (for caching)
REDIS_URL="redis://localhost:6379/0"
REDIS_TTL=3600

# Ghana Government Specific Configuration
GHANA_DATA_PROTECTION_COMPLIANCE=true
AUDIT_LOG_RETENTION_DAYS=365
ENCRYPTION_KEY="[CLASSIFIED-GOVERNMENT-ISSUED-ENCRYPTION-KEY]"

